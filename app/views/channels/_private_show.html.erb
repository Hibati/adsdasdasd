<%= render :partial => 'channelinfo', :locals => { :zone => "private" } %>

<div class="col-xs-6 col-sm-6"  style="padding-left: 42px;">
  <h4 style="color: #333;">Channel Stats</h4>
  <table>
    <tr><td>Created</td><td ><abbr class="timeago channel_time_text" title="<%= @channel.created_at %>" ><%= @channel.created_at %></abbr></td></tr>
    <tr><td>Updated</td><td ><abbr class="timeago channel_time_text" title="<%= @channel.updated_at %>" ><%= @channel.updated_at %></abbr></td></tr>
  </table>
  <span><%= @channel.feeds.count %> Entries</span>
</div>

<div align="center">
  <table style="border:3px #FFAC55 double;padding:5px;" rules="all" cellpadding='5' align="left" >
    <% if @channel.twitter_name != nil %>
      <td>Signed in as <strong><%= @channel.twitter_name %></strong>!</td>
      <td><%= link_to "Sign out", signout_path, id: "sign_out" %></td>
    <% else %>
      <td><%= link_to "Sign in with Twitter", "/auth/twitter", id: "sign_in" %></td>
    <% end %>
  </table>
</div>


<div align="center">
  <table style="border:3px #FFAC55 double;padding:5px;" rules="all" cellpadding='5'>

      <%= form_for @channel do |c| %>
        <tr>
          <td align="center"><%= @channel.id %></td>
          <td align="center"><%= @channel.When_this_stuff_happens %></td>
          <td align="center"><%= @channel.Event_1 %></td>
          <td align="center"><%= @channel.Event_2 %></td>
          
          <% if @channel.Then_do_these_things_1st != "Null" %>
            <td align="center"><%= @channel.Then_do_these_things_1st %></td>
            <td align="center"><%= @channel.Event_3 %></td>
          <% end %>
          
          <% if @channel.Then_do_these_things_2st != "Null" %>
            <td align="center"><%= @channel.Then_do_these_things_2st %></td>
            <td align="center"><%= @channel.Event_4 %></td>
          <% end %>
          
          <% if @channel.Then_do_these_things_3st != "Null" %>
            <td align="center"><%= @channel.Then_do_these_things_3st %></td>
            <td align="center"><%= @channel.Event_5 %></td>
          <% end %>
          
          <% if @channel.Then_do_these_things_4st != "Null" %>
            <td align="center"><%= @channel.Then_do_these_things_4st %></td>
            <td align="center"><%= @channel.Event_6 %></td>
            <td align="center"><%= @channel.Event_7 %></td>
            <td align="center"><%= @channel.Event_8 %></td>
          <% end %>
          <td align="center"><%= link_to "Running", { :controller => 'channels', :action => 'drive_run'}, class: 'btn btn-danger' %></td>
          <td align="center"><%= link_to "Stop", { :controller => 'channels', :action => 'drive_stop'}, class: 'btn btn-danger' %></td> 
        </tr>
      <% end %>
  </table>
</div>

<div class="CB">
  <div class="col-xs-6 col-sm-6">
    <div id="private_dialog0" class="column"></div>
  </div>
  <div class="col-xs-6 col-sm-6">
    <div id="private_dialog1" class="column"></div>
  </div>
</div>



<script>
  // when the document is ready
  $(document).on('page:load ready', function() {

    // when the devinfo link is clicked
    $("#devInfoLink_private").click(function(e) {
      var element = $("#devInfo");
      openDialogCenter(element);
      return false;
    });

    // when the add window link is clicked
    $("#portletAddLink_private").click(function(e) {
      $("#addPortlets").load('/channels/<%=@channel.id %>/hidden_windows?visibility_flag=private', function(e) {
        var element = $("#addPortlets");
        openDialogCenter(element);
      });
      return false;
    });

  });

</script>

